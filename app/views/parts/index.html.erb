<div class="col-md-6">
  <h1>Ингридиенты</h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>id</th>
        <th>Название</th>
        <th>Количество</th>
        <th>Измеряется</th>
        <th>Рецепт</th>
      </tr>
    </thead>

    <tbody>
      <% @parts.each do |part| %>
        <tr>
          <td><%= part.name %></td>
          <td><%= part.quantity %></td>
          <td><%= part.unit %></td>
          <td><%= part.recipe_name %></td>
          <td><%= link_to 'Edit', edit_recipe_part_path(part.recipe, part), class: 'btn btn-primary btn-xs' %></td>
          <td><%= link_to 'Destroy', recipe_part_path(part.recipe, part), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'New Part', edit_recipe_path, class: 'btn btn-success' %>
</div>