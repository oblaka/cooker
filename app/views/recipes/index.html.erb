<h1>Listing recipes</h1>

<table class="table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>Название</th>
      <th>Количество</th>
      <th>Измеряется</th>
      <th>Создан</th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= link_to recipe.id, recipe_path(recipe) %></td>
        <td><%= recipe.name %></td>
        <td><%= recipe.quantity %></td>
        <td><%= recipe.unit %></td>
        <td><%=l recipe.created_at %></td>
        <td>....</td>
        <td><%= link_to 'Show', recipe, class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe), class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

