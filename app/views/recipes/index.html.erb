<div class="col-md-6">
  <h1>Известные рецепты</h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>id</th>
        <th>Название</th>
        <th>Количество</th>
        <th>Измеряется</th>
      </tr>
    </thead>

    <tbody>
      <% @recipes.each do |recipe| %>
        <tr>
          <td><%= recipe.id %></td>
          <td><%= link_to recipe.name, recipe_path(recipe) %></td>
          <td><%= recipe.quantity %></td>
          <td><%= recipe.unit %></td>
          <td>....</td>
          <td><%= link_to 'Show', recipe, class: 'btn btn-info btn-xs' %></td>
          <td><%= link_to 'Edit', edit_recipe_path(recipe), class: 'btn btn-primary btn-xs' %></td>
          <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'New Recipe', new_recipe_path, class: 'btn btn-success' %>
</div>