<div class="col-md-6">
  <h1>Мои продукты</h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Название</th>
        <th>Количество</th>
        <th>Измеряется</th>
        <th>Владелец</th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.quantity %></td>
          <td><%= item.unit %></td>
          <td><%= item.user.id %></td>
          <td><%= link_to 'Show', item, class: 'btn btn-info btn-xs' %></td>
          <td><%= link_to 'Edit', edit_item_path(item), class: 'btn btn-primary btn-xs' %></td>
          <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'New Item', new_item_path, class: 'btn btn-success' %>

  <h1>Все продукты</h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Название</th>
        <th>Количество</th>
        <th>Измеряется</th>
        <th>Владелец</th>
      </tr>
    </thead>

    <tbody>
      <% @all_items.each do |item| %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.quantity %></td>
          <td><%= item.unit %></td>
          <td><%= item.user.id %></td>
      <% end %>
    </tbody>
  </table>
</div>