<%= bootstrap_form_for(@product) do |f| %>

  <%= f.text_field :name, label: "Название" %>
  <%= f.text_field :quantity, label: "Количество" %>
  <%= f.text_field :unit, label: "Измеряется в" %>
  <%= f.text_area :description, label: "Описание" %>

  <%= f.submit "Сохранить", class: "btn btn-success" %>

<% end %>
