<h2>Add item:</h2>
<%= bootstrap_form_for @product, url: {controller: 'items', action: 'increase'} do |f| %>

    <%= f.hidden_field :product_id, value: @product.id %>

    <%= f.fields_for :items do |i| %>
      <%= i.text_field :quantity, append: @product.unit  %>
    <% end %>

    <%= f.submit "Добавить" %>

<% end %>